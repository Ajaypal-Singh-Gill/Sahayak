<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".DonorSignIn">


    <EditText
        android:id="@+id/mobileno"
        android:layout_width="363dp"
        android:layout_height="56dp"
        android:background="@drawable/round_shape"
        android:drawableStart="@drawable/ic_username"
        android:hint="Mobile No."
        android:inputType="textPersonName"
        android:maxLength="12"
        android:padding="16dp"
        android:phoneNumber="true"
        android:textColor="#ADCCE2"
        android:textColorHint="#ADCCE2"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342" />

    <Button
        android:id="@+id/otpbtn"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/fui_bgEmail"
        android:drawableStart="@drawable/fui_ic_mail_white_24dp"
        android:gravity="center"
        android:text="Get OTP"
        android:textColor="@color/fui_bgAnonymous"
        android:textColorHighlight="@color/colorSecondaryDark"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobileno" />

</androidx.constraintlayout.widget.ConstraintLayout>


